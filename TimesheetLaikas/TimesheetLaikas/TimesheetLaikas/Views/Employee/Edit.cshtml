@model TimesheetLaikas.Models.ViewModels.UserViewModel
@using TimesheetLaikas.Models

@{ ViewData["Title"] = "Edit"; }
<body class="bg-light">
    <div class="container">
        <div class="py-5 text-center">
            <img class="d-block mx-auto mb-4" src="~/images/West_Virginia_University_at_Parkersburg_seal.png" alt="" width="100" height="100    ">
            <h2>Employee Registration</h2>
            <p class="lead">Update Employee Information</p>
        </div>

        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Employee Information</h4>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="EMP_FNAME">First Name</label>
                        <input asp-for="EMP_FNAME" class="form-control" required>
                        <span asp-validation-for="EMP_FNAME" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="EMP_LNAME">Last Name</label>
                        <input asp-for="EMP_LNAME" class="form-control" required>
                        <span asp-validation-for="EMP_LNAME" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" disabled>
                </div>

                <div class="mb-3">
                    <label for="address">Address</label>
                    <input asp-for="ADDRESS" class="form-control" required>
                    <span asp-validation-for="ADDRESS" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="City">City</label>
                        <input asp-for="CITY" class="form-control" required>
                        <span asp-validation-for="CITY" class="text-danger"></span>
                    </div>


                    <div class="col-md-3 mb-3">
                        <label for="zip">Zip</label>
                        <input asp-for="ZIPCODE" class="form-control" required>
                        <span asp-validation-for="ZIPCODE" class="text-danger"></span>
                    </div>
                </div>

                <hr class="mb-4">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="EMP_PHONE">Phone Number</label>
                        <input asp-for="EMP_PHONE" class="form-control">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="role">Role</label>
                        <select asp-for="RoleId" asp-items="@Model.ApplicationRoles" class="form-control">
                            <option>Please select</option>
                        </select>
                        <span asp-validation-for="Roles" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DepartmentId" class="control-label"></label>
                        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                </div>

                <hr class="mb-4">

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</body>